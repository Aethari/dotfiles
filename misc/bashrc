test -s ~/.alias && . ~/.alias || true

# custom prompt
PS1='\W > '

export TERMINAL="urxvt"

# reminder to use ctrl+l instead of typing "clear"
alias clear='echo Just use ctrl+L && echo'

# see battery percentage with a single command
alias bat='cat /sys/class/power_supply/BAT1/capacity'

# terminal network manager
alias network='nmtui'

# terminal bluetooth manager
alias bt='bluetoothctl'

# reset terminal state - useful when using/making curses based apps
# I always accidentially type "rest" instead of "reset", so I added
# autocorrect
alias rest='reset'

# kill background processes
alias killbg='kill -9 `jobs -ps`'

# get the line count of files
alias len='wc -l'

alias nf='neofetch'
alias pico8='~/Apps/PICO8/pico8 &'

alias steam='STEAM_RUNTIME_PREFER_HOST_LIBRARIES=1 steam'
alias 1password='dbus-run-session nohup flatpak run com.onepassword.OnePassword &'
